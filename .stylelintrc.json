{
    "extends": ["stylelint-config-standard-scss", "stylelint-config-sass-guidelines"],
    "overrides": [
        {
            "files": ["**/*.scss"],
            "customSyntax": "postcss-scss"
        }
    ],
    "rules": {
        "indentation": 4,
        "max-nesting-depth": 3,
        "number-leading-zero": null
    }
}
